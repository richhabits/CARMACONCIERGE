generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  role      Role     @default(DRIVER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  vehicles  Vehicle[]
}

enum Role {
  ADMIN
  FLEET_MANAGER
  DRIVER
}

model Vehicle {
  id           String          @id @default(uuid())
  registration String          @unique
  make         String
  model        String
  year         Int
  ownerId      String
  owner        User            @relation(fields: [ownerId], references: [id])
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  motRecords   MOTRecord[]
  serviceRecords ServiceRecord[]
}

model MOTRecord {
  id         String   @id @default(uuid())
  vehicleId  String
  vehicle    Vehicle  @relation(fields: [vehicleId], references: [id])
  testDate   DateTime
  expiryDate DateTime
  result     MOTResult
  mileage    Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum MOTResult {
  PASS
  FAIL
}

model ServiceRecord {
  id         String   @id @default(uuid())
  vehicleId  String
  vehicle    Vehicle  @relation(fields: [vehicleId], references: [id])
  serviceDate DateTime
  type       String
  cost       Float
  providerId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

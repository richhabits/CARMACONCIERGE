{
  "name": "carmaconcierge-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "mobile:dev": "pnpm --filter mobile dev",
    "backend:dev": "pnpm --filter backend dev",
    "admin:dev": "pnpm --filter admin dev",
    "verify": "./scripts/verify-setup.sh",
    "test:system": "./scripts/test-system.sh",
    "clean-start": "./scripts/clean-start.sh",
    "backend:prisma:generate": "pnpm --filter backend prisma:generate",
    "backend:prisma:migrate": "pnpm --filter backend prisma:migrate",
    "backend:prisma:studio": "pnpm --filter backend prisma:studio"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}